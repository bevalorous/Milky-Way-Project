.navigation-overlay
  text-align: center

  a
    color: inherit
    text-decoration: none
    opacity: 0.75

    &:hover
      opacity: 1

    &.active
      color: BLUEISH
      opacity: 1

  .pages
    font-size: 36px
    line-height: 1

    a
      display: inline-block
      padding: 10px 0

      &.aux
        border: 2px solid
        border-radius: 1em
        font-size: 14px
        font-weight: bold
        padding: 5px 15px
        vertical-align: middle

  .social
    margin-top: 60px

    a
      border: 2px solid
      border-radius: 50%
      display: inline-block
      font-size: 20px
      height: 1.25em
      line-height: 1.25em
      margin: 0 10px
      padding: 3px
      width: 1.25em
