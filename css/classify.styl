[data-location-hash="#/classify"] .site-header
  height: 370px

.classify
  margin-top: -290px

  .interface
    margin: 0 auto
    position: relative
    width: 800px

  .subject-options
    color: white
    position: absolute
    right: 100%
    top: 0

    a,
    button
      border: 2px solid
      border-radius: 50%
      box-sizing: border-box
      display: inline-block
      color: inherit
      font-size: 20px
      height: 40px
      line-height: 36px
      margin: 5px 10px
      position: relative
      text-align: center
      width: 40px

      &.active
        background: DARK_BLUEISH
        color: yellow

      &.showing-overlay
        z-index: 1

  .subject
    background: rgba(DARK_BLUEISH, 0.9)
    border-radius: 5px
    color: white
    position: relative

  .loading-indicator
    color: rgba(white, 0.5)
    display: none
    font-size: 200px
    left: 50%
    position: absolute
    top: 50%
    transform: translate(-50%, -50%)
    z-index: 1

  &.loading .loading-indicator
    display: block

  .marking-surface
    display: block
    height: 400px
    width: 100%

  .marking-tool-controls
    text-shadow:
      0 0 1px black,
      0 1px 2px black,
      0 2px 3px black

    button
      &[name="destroy"]
        background: red
        border-radius: 50%
        color: white
        font-weight: bold
        height: 1.25em
        line-height: 1.25em
        width: 1.25em

    label
      display: inline-block
      width: 120px
      text-align: left

  .question
    font-size: 18px
    line-height: 1
    margin: 30px 0
    text-align: center

  .tools
    border-spacing: 10px 0
    display: table
    margin: 30px -10px
    text-align: center
    width: 100%
    width: calc(100% \+ 20px)

    .tool
      display: table-cell
      height: 100px
      vertical-align: middle
      white-space: nowrap
      width: 10% // Eh, play with this so they're even

    label
      cursor: pointer
      display: block
      width: 100%

    input
      bottom: 0
      position: absolute
      right: 0
      visibility: hidden

    .outer-label,
    button
      border: 2px solid
      border-radius: 5px
      box-sizing: border-box
      cursor: pointer
      display: block
      font-weight: bold
      height: 100px
      position: relative
      width: 100%

    button[name="finish"]
      background: GREEN
      border-width: 0
      color: white

    :checked + .outer-label
      background: BLUEISH
      border-color: BLUEISH
      color: white

    .inner-label
      left: 50%
      position: absolute
      top: 50%
      transform: translate(-50%, -50%)

    .icon
      font-size: 30px
