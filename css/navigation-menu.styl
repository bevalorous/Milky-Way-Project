.navigation-menu
  BACKGROUND = #04181c
  FOREGROUND = white
  ACTIVE = #3c8999

  background: rgba(BACKGROUND, 0.9)
  bottom: 0
  color: FOREGROUND
  left: 0
  position: fixed
  right: 0
  top: 0
  transition:
    opacity 0.5s,
    transform 0.5s

  &.hidden
    opacity: 0
    transform: translateY(-100%)

  .links
    left: 50%
    max-height: 100%
    position: absolute
    text-align: center
    top: 50%
    transform: translate(-50%, -50%)
    width: 800px

  a
    color: inherit
    text-decoration: none

    &.active
      color: ACTIVE

  .pages
    font-size: 36px
    line-height: 1

    a
      display: inline-block
      padding: 10px 0

  .social
    margin-top: 60px

    a
      border: 2px solid
      border-radius: 50%
      display: inline-block
      font-size: 20px
      height: 1.25em
      line-height: 1.25em
      margin: 0 10px
      padding: 3px
      width: 1.25em
