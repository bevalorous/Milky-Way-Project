.site-header
  background: gray url("./images/background.jpg") 50% 50% fixed
  background-size: cover
  color: white
  height: 80px
  line-height: 1
  transition: height 0.5s

  .content
    margin: 0 auto
    padding: 30px 0
    width: 800px

  .constant
    position: relative

    &.showing-overlay
      z-index: 1

  .logo
    color: inherit
    text-decoration: none
    text-transform: uppercase
    letter-spacing: 1px

  .trailing
    float: right
