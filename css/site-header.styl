.site-header
  background: gray url("./images/blurry-redness.jpg") 50% 50% fixed
  background-size: cover
  color: white
  height: 80px
  line-height: 1
  position: relative
  transition: height 0.5s

  .home-background
    background: (gray / 2) + (GREEN / 2) /* TODO */
    height: 100%
    left: 0
    opacity: 0
    position: absolute
    top: 0
    transition: opacity 0.75s
    width: 100%

  .content
    margin: 0 auto
    padding: 30px 0
    width: 800px

  .constant
    position: relative

    &.showing-overlay
      z-index: 1

  .logo
    color: inherit
    text-decoration: none
    text-transform: uppercase
    letter-spacing: 1px

  .trailing
    float: right
