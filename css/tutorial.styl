.zootorial-tutorial
  background: white
  border-radius: 5px
  color: #424242
  font-size: 16px
  line-height: 24px
  width: 400px
  transition: transform 0.5s

.zootorial-close
  height: 1.25em
  opacity: 0.5
  line-height: 1
  position: absolute
  right: 0
  top: 0
  width: 1.25em

.zootorial-content
  padding: 20px

.zootorial-footer
  background: #d8d8d8
  border-radius: 5px
  padding: 5px
  text-align: center

.zootorial-instruction
  @extends .zootorial-footer
  padding: 20px

.zootorial-next
  background: BLUEISH
  border-radius: 5px
  color: white
  padding: 10px 40px
  transition: background 0.2s

  &:hover
    background: lighten(@background, 7.5%)

.zootorial-demo
  background: rgba(black, 0.5)
  border-radius: 3px
  color: white
  font-size: 12px
  font-weight: bold
  padding: 0 10px
  transition: background 0.2s

  &:after
    content: "!"

  &:hover
    background: lighten(@background, 7.5%)

.zootorial-arrow
  border: 10px solid transparent
  height: 0
  width: 0

  &[data-zootorial-position="top"]
    border-bottom-color: white
    border-top-width: 0;
    bottom: 100%
    left: 50%
    margin-left: -10px

  &[data-zootorial-position="right"]
    border-left-color: white
    border-right-width: 0;
    left: 100%
    margin-top: -10px
    top: 50%

  &[data-zootorial-position="bottom"]
    border-bottom-width: 0;
    border-top-color: #d8d8d8
    left: 50%
    margin-left: -10px
    top: 100%

  &[data-zootorial-position="left"]
    border-left-width: 0;
    border-right-color: white
    margin-top: -10px
    right: 100%
    top: 50%
